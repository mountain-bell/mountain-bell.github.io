{
	"private": true,
	"workspaces": [
		"sample",
		"dom-trigger",
		"hello-world"
	],
	"devDependencies": {
		"dts-bundle-generator": "^9.5.1",
		"esbuild": "^0.25.10",
		"npm-run-all": "^4.1.5",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"build": "npm run build --ws --if-present",
		"dev": "npm run dev --ws --if-present",
		"build:sample": "npm run -w sample build",
		"dev:sample": "npm run -w sample dev",
		"build:dom-trigger": "npm run -w dom-trigger build",
		"dev:dom-trigger": "npm run -w dom-trigger dev",
		"build:hello-world": "npm run -w hello-world build",
		"dev:hello-world": "npm run -w hello-world dev"
	},
	"dependencies": {
		"@mountain-bell/dom-trigger": "^0.1.0",
		"@mountain-bell/hello-world": "^0.1.0"
	}
}
